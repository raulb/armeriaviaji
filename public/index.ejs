<!-- The big featured header on the homepage, with the site logo and description  -->
<header class="site-head" <% if (blog.cover) { %>style="background-image: url(<%= blog.cover %>)"<% } %>>
  <%- partial("_shared/nav") %>
  <div class="vertical">
    <div class="site-head-content inner">
      <% if (blog.logo) { %><a class="blog-logo" href="<%= blog.url %>"><img src="<%= blog.logo %>" alt="Blog Logo" /></a><% } %>
      <h1 class="blog-title"><%= blog.title %></h1>
      <h2 class="blog-description"><%= blog.description %></h2>
    </div>
  </div>
</header>

<!-- The main content area on the homepage  -->
<main class="content" role="main">

  <% for (index_logo in logos) { %>
    <% var logo = logos[index_logo] %>
    <img src="<%= logo.src %>" />
    <%- logo.title %>
  <% } %>
    <!--! After all the posts, we have the previous/next pagination links  -->
    <!-- {{pagination}} -->

</main>
